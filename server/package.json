{
  "name": "test-api",
  "version": "0.0.1",
  "description": "Minimal api docker image for testing services etc.",
  "main": "src/index.js",
  "author": "Ron Dyck <rond@webbtech.net> (http://webbtech.net/)",
  "license": "MIT",
  "dependencies": {
    "apollo-server-hapi": "1.1.0",
    "graphql": "0.10.5",
    "graphql-tools": "1.2.1",
    "hapi": "16.5.2",
    "lodash": "4.17.4",
    "mongoose": "4.11.7",
    "request-promise": "4.2.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "mocha": "3.5.0",
    "nodeman": "1.1.2",
    "tap-spec": "4.1.1",
    "tape": "4.8.0"
  },
  "scripts": {
    "test": "NODE_ENV=test tape -r babel-register tests/**/*.spec.js | tap-spec",
    "build": "babel src -d dist",
    "serve": "NODE_ENV=development node dist/index.js",
    "start": "NODE_ENV=development nodemon src/index.js --exec babel-node"
  }
}
